<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/updated_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hci.com.tentativecapstoneui.OjtObjective"
    tools:showIn="@layout/app_bar_ojt_objective">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="16dp"
        android:layout_y="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="347dp"
                android:layout_height="498dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="10dp">

                <ImageView
                    android:layout_width="327dp"
                    android:layout_height="159dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/aboutojt" />

                <TextView
                    android:layout_width="334dp"
                    android:layout_height="82dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="170dp"
                    android:text="Objectives of the On-The-Job training / Practicum Program"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="317dp"
                    android:layout_height="230dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="240dp"
                    android:paddingTop="10dp"
                    android:text="The T.I.P. Students' On-the-Job Training/Practicum Program aims to:\n \n \n"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="313dp"
                    android:layout_height="119dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="290dp"
                    android:paddingTop="10dp"
                    android:text="Provide the students an opportunity to be exposed in an actual work setting and assimilate their academic learning into practical applications."
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="319dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="380dp"
                    android:paddingTop="14dp"
                    android:text="Develop and instill among students the industry-desired values of positive work attitude, good human relations, competency intechnical skills that pertain to their fields of study, and the openness to keep on learning to reinvent themselves."
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>