<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/updated_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hci.com.tentativecapstoneui.OjtGrade"
    tools:showIn="@layout/app_bar_ojt_grade">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="520dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="347dp"
            android:layout_height="498dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="309dp"
                        android:layout_height="171dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/grading" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="195dp"
                        android:text="ON-THE-JOB TRAINING/PRACTICUM GRADING SYSTEM"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="230dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="240dp"
                        android:paddingTop="10dp"
                        android:text="The passing grade is 75%. A trainee who fails to submit the requirements on time at the end of the semester shall be given a grade of NO CREDIT (NC). \n
        A student automatically gets a failing grade (5.0) if he/she is reported by the company for any act involving moral turpitude during his/her training. \n
        A student shall be given a grade of dropped if he/she has exceeded the maximum allowable absences of 20% of the required training hours as reported by the training supervisor.\n \n \n"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="14dp" />
                </RelativeLayout>
            </ScrollView>


        </android.support.v7.widget.CardView>


    </RelativeLayout>



</RelativeLayout>